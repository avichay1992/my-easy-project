<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#920e8f00"

    android:orientation="vertical">

    <Button
        android:id="@+id/distanceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#acffa9"
        android:text="@string/distance_type"
        android:textColor="#2b2b2a"
        />

    <Button
        android:id="@+id/deleteAllFavorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#b2000000"
        android:text="@string/delete_favorites_list"
        android:textColor="#ca2294ff" />

    <Button
        android:id="@+id/deleteAllResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#b2000000"
        android:text="@string/delete_result_history"
        android:textColor="#caff2229" />

</LinearLayout>